
.container {
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 横幅图样式 */
.banner {
  width: 100%;
  height: 300rpx;
  display: block;
  margin-bottom: 40rpx;
}

/* 四宫格容器 */
.grid-container {
  background-color: #ffffff;
  border-radius: 20rpx;
  margin: 0 30rpx;
  padding: 30rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

/* 行样式 */
.grid-row {
  display: flex;
  justify-content: space-around;
  margin: 40rpx 0;
}

/* 单个功能项 */
.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 300rpx;
}

/* 图标样式 */
.grid-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

/* 文字样式 */
.grid-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

