<view class="page_container"><view class="top_bg"></view><view class="main_content"><block wx:if="{{hasUserInfo}}"><view class="userinfo_container"><image class="avatar" src="{{userInfo.avatarUrl}}" mode="widthFix"></image><text class="username">{{userInfo.nickName}}</text></view></block><block wx:else><view class="userinfo_container"><image class="avatar" src="{{defaultAvatar}}" mode="widthFix"></image><text class="username">未登录</text></view></block><view class="settings_container"><view data-event-opts="{{[['tap',[['updateNickName',['$event']]]]]}}" class="setting_item" bindtap="__e"><view class="left"><image class="setting_icon" src="/static/icon/share.svg"></image><view class="setting_text">修改昵称</view></view><image class="arrow_icon" src="/static/icon/arrow.svg"></image></view></view><block wx:if="{{!hasUserInfo}}"><view class="login-btn-container"><button data-event-opts="{{[['tap',[['handleLogin',['$event']]]]]}}" class="login-btn" bindtap="__e">微信授权登录</button></view></block></view></view>